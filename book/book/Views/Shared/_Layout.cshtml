

<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - book</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/book.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <style>
            .nav-link {
                color: white; /* Yazı rengini beyaz yap */
                font-size: 16px; /* Yazı boyutunu ayarla */
                font-weight: bold; /* Yazıyı kalınlaştır */
            }
        </style>


    </head>


    <body>

        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-bg navbar-dark bg-dark border-bottom box-shadow mb-3">

                <nav class="navbar bg-body-tertiary">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">
                            <img src="/img/Image1.jpeg" alt="Logo" width="180" height="100" class="d-inline-block align-text-top">

                        </a>
                    </div>
                </nav>
                <div class="container-fluid  justify-content-center">

                    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item mt-3">
                            <a asp-controller="Hjem" asp-action="Index" class="nav-link">
                                <i class="fas fa-cog"></i> Hjem
                            </a>
                        </li>
                        <li class="nav-item mt-3">
                            <a asp-controller="Utvalg" asp-action="Index" class="nav-link">
                                <i class="fas fa-check-circle"></i> Utvalg
                            </a>

                        </li>

                        <li class="nav-item mt-3">
                            <a asp-controller="DuKanBidra" asp-action="Index" class="nav-link">
                                <i class="fas fa-pen"></i> Du Kan Bildra
                            </a>
                        </li>
                        <li class="nav-item mt-3">
                            <a asp-controller="AktivitetsArkiv" asp-action="Index" class="nav-link">
                                <i class="fas fa-cog"></i> AktivitetsArkiv
                            </a>
                        </li>
                        <li class="nav-item mt-3">
                            <a asp-controller="OmOss" asp-action="Index" class="nav-link">
                                <i class="fas fa-check-circle"></i> Om Oss
                            </a>

                        </li>

                        <li class="nav-item mt-3">
                            <a asp-controller="KontaktOss" asp-action="Index" class="nav-link">
                                <i class="fas fa-pen"></i> Kontakt Oss
                            </a>
                        </li>
                    </ul>



                </div>
                <div class="d-flex justify-content-end align-items-center ">
                    <a href="/Account/Index" class="btn btn-link text-white">
                        <i class="bi bi-person-fill h2"></i>
                    </a>
                    <div class="dropdown">
                        <button class="btn btn-link text-white dropdown-toggle" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-globe h2"></i>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="languageDropdown">
                            <li><a class="dropdown-item" href="#">English</a></li>
                            <li><a class="dropdown-item" href="#">Spanish</a></li>
                            <li><a class="dropdown-item" href="#">French</a></li>
                        </ul>
                    </div>
                </div>


            </nav>

        </header>

    

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2023 - book - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)

    

    </body>
    </html>

